<Page x:Class="Hospital.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hospital"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid Background="White" Width="800" Height="450">
        <StackPanel Margin="247,30,247,260">
            <Label FontSize="20" FontWeight="Bold" Width="302">Username</Label>
            <TextBox Name="Emailbox" Width="292" Height="32"></TextBox>
            <Label FontSize="20" FontWeight="Bold" Width="302">Password</Label>
            <PasswordBox Name="passwordbox" Width="292" Height="32"></PasswordBox>
        </StackPanel>
        <Border CornerRadius="8"  Background="Black" Margin="281,216,439,197">

            <Button FontWeight="Bold" Background="Transparent" BorderBrush="Transparent" Foreground="White" FontSize="20" Click="Button_Click" >Login</Button>
        </Border>
        <Border CornerRadius="8"  Background="Black" Margin="452,216,268,197">

            <Button BorderThickness="0" FontWeight="Bold" Background="Transparent" BorderBrush="Transparent" Foreground="White" FontSize="20" Click="Button_Click_1" >Signup</Button>
        </Border>
        </Grid>
</Page>
